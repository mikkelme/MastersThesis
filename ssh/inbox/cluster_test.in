# --- Basics --- # 
units metal
newton on #newtons 3rd law for pairs
boundary p p m  
atom_style atomic # coarse-grain liquids, solids, metals


# --- Read files --- #
read_data sheet_substrate.txt
# read_data inbox/substrate.txt

# Regions and groups 
region sheet_region block INF INF INF INF 18.00 INF
region substrate_region block INF INF INF INF INF 18.00
group  sheet region sheet_region
group  substrate region substrate_region


#--- Dynamics ---#
variable temp equal 200 # Kelvin

mass 1 12.0107  # C
mass 2 28.0855  # Si

velocity all create ${temp} 5432373 dist gaussian

neighbor            0.5 bin
neigh_modify        delay 0 every 1 one 10000

# Potentials: C-C: Airebo, C-Si: LJ, Si-Si: SW
pair_style hybrid sw lj/cut 8.0 airebo 6.4 1 1 # lj 
pair_coeff * * airebo potentials/CH.airebo C NULL    # Sheet C-C
pair_coeff 1 2 lj/cut 0.008909 3.26                  # Interaction C-Si 
pair_coeff * * sw potentials/si.sw NULL Si           # Substrate Si-Si

timestep 0.001 # 1 fs
thermo              10
thermo_style custom step time temp 
fix nve all nve # (microcanonical) 


# --- Dump --- #
dump 1 all custom 100 system_test.data id type x y z vx vy vz


run 300

