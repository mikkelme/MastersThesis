# --- Basics --- # 
units metal
newton on #newtons 3rd law for pairs
boundary p p m  
atom_style atomic # coarse-grain liquids, solids, metals


# --- Create Lattice --- #
lattice custom 2.419 &
        a1    0                 1.0     0     &
        a2    $(sqrt(3)/2)      0.5     0     &
        a3    $(1/(2*sqrt(3)))  0.5     0.83  &
        basis 0                 0       0     &
        basis $(1/3)            $(1/3)  0.0

region simreg1 block 0 20 0 20 0 0.5  # xlo xhi ylo yhi zlo zhi
region simreg2 block 0 20 0 20 4.5 5  # xlo xhi ylo yhi zlo zhi
region merge union 2 simreg1 simreg2



create_box 2 merge 
create_atoms 1 region simreg1 basis 1 1
create_atoms 2 region simreg2 basis 2 2



variable temp equal 100.0 # Kelvin                  
variable damp equal 1.0 # ps                        

# --- Dynamics --- #            
mass 1 12.0107  # C
mass 2 12.0107  # C


# mass 1 12.0107  # C
# mass 2 28.0855  # Si
# mass 3 1.0      # Virtuel atom

velocity all create ${temp} 5432373 dist gaussian
pair_style hybrid tersoff lj/cut 4.0 
pair_coeff 1 2 lj/cut 0.008909 1.26                    
pair_coeff * * tersoff C.tersoff C NULL
pair_coeff * * tersoff C.tersoff NULL C
