units metal
newton on 
boundary p p m  
atom_style bond 
# atom_style atomic

# Graphene lattice
lattice custom 2.419 &
        a1    0                 1.0     0     &
        a2    $(sqrt(3)/2)      0.5     0     &
        a3    $(1/(2*sqrt(3)))  0.5     0.83  &
        basis 0                 0       0     &
        basis $(1/3)            $(1/3)  0.0

# Simulation box & atoms
region sheet_reg block 5 25 5 25 0 0.5 
region boxreg block 0 30 0 30 -5 5 
create_box 1 boxreg
create_atoms 1 region sheet_reg basis 1 1


