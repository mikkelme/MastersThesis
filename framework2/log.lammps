LAMMPS (23 Jun 2022)
units metal
newton on  # newtons 3rd law for pairs

boundary m m m
atom_style atomic # coarse-grain liquids, solids, metals


variable eps equal 1e-6

# ---- Create atoms --- #
# Parameters
variable a equal 5.43  # lattice spacing [Å]
variable xmax equal 40.0  # [Å]
variable ymax equal 40.0  # [Å]
variable zmax equal 15.0  # [Å]

# Number of unit cells to get closest to x-y-z-max
variable xlen equal $(round((v_xmax + 1/4*v_a)/v_a))  # [a]
variable xlen equal 8  
variable ylen equal $(round((v_ymax + 1/4*v_a)/v_a))  # [a]
variable ylen equal 8  
variable zlen equal $(round((v_zmax)/v_a))  # [a]
variable zlen equal 3  
print "Max pos:  $(v_xlen*v_a - 1/4*v_a), $(v_ylen*v_a - 1/4*v_a), $(-v_zlen*v_a)"
Max pos:  42.082499999999996021, 42.082499999999996021, -16.289999999999999147


# Create lattice and simulation box
lattice diamond ${a}
lattice diamond 5.43
Lattice spacing in x,y,z = 5.43 5.43 5.43
region myreg block -${eps} ${xlen} -${eps} ${ylen} -${zlen} ${eps}  units lattice
region myreg block -1e-06 ${xlen} -${eps} ${ylen} -${zlen} ${eps}  units lattice
region myreg block -1e-06 8 -${eps} ${ylen} -${zlen} ${eps}  units lattice
region myreg block -1e-06 8 -1e-06 ${ylen} -${zlen} ${eps}  units lattice
region myreg block -1e-06 8 -1e-06 8 -${zlen} ${eps}  units lattice
region myreg block -1e-06 8 -1e-06 8 -3 ${eps}  units lattice
region myreg block -1e-06 8 -1e-06 8 -3 1e-06  units lattice
create_box 1 myreg
